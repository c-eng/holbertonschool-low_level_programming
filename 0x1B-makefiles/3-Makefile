CC = gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME = holberton
RM = rm -f

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

clean:
	${RM} *~ holberton

oclean:
	${RM} *.o

fclean:
	${RM} *~ holberton *.o

re: ${SRC}
	${RM} main.o holberton.o
	${CC} -c -o main.o main.c
	${CC} -c -o holberton.o holberton.c
	${CC} ${OBJ} -o ${NAME}
